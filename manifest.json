{
  "manifest_version": 2,
  "name"            : "Styler Next",
  "version"         : "0.0.0",
  "description"     : "Injects css and js into pages",

  "background": {
    "scripts": [
      "background/file.js",
      "background/utils.js",
      "background/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  // "icons": {
  //   "16"  : "public/images/icon16.png",
  //   "48"  : "public/images/icon48.png",
  //   "128" : "public/images/icon128.png"
  // },

  "permissions": [
    "tabs",
    "storage",
    "management",
    "webNavigation"
  ]
}
