{
  "manifest_version": 2,
  "name"            : "Styler",
  "version"         : "1.0",
  "description"     : "Injects css and js into pages",

  "background": {
    "scripts": [
      "background/file.js",
      "background/utils.js",
      "background/background.js"
    ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "icons": {
    "16"  : "images/icon16.png",
    "48"  : "images/icon48.png",
    "128" : "images/icon128.png"
  },

  "permissions": [
    "storage"
  ]
}
